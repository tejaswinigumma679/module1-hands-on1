<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="teja.example.teja.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom UI Component Library"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Styled Button Examples"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <teja.example.teja.components.StyledButton
        android:id="@+id/btnPrimary"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="12dp" />

    <teja.example.teja.components.StyledButton
        android:id="@+id/btnSecondary"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="12dp" />

    <teja.example.teja.components.StyledButton
        android:id="@+id/btnDanger"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="12dp" />

    <teja.example.teja.components.StyledButton
        android:id="@+id/btnToggleLoading"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Success Button"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <teja.example.teja.components.StyledButton
        android:id="@+id/btnSuccess"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Warning Button"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <teja.example.teja.components.StyledButton
        android:id="@+id/btnWarning"
        android:layout_width="match_parent"
        android:layout_height="56dp" />

</LinearLayout>